<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt"
>
    <g:HTMLPanel styleName="main">
        <b.html:Div addStyleNames="col-md-2"/>
        <b.gwt:DataGrid bordered="true" condensed="true" striped="true" hover="true" addStyleNames="col-md-8" height="300px" width="100%" ui:field="dataGrid"/>
        <b:Pagination ui:field="dataGridPagination"/>
        <b.html:Div addStyleNames="col-md-2"/>
    </g:HTMLPanel>
</ui:UiBinder>