<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.vypersw.finances.client.widget"
>
    <ui:with field="constants" type="com.vypersw.finances.client.i18n.FinancesConstants"/>
    <g:HTMLPanel ui:field="toolbarContainer">
    	<div class="toolbar-main">
    		<div class="toolbar-buttons">
	    		<div class="toolbar-save">
                    <widget:ToolbarButton ui:field="create" text="{constants.create}"
                                          iconStyle="glyphicon glyphicon-plus"/>
                    <widget:ToolbarButton ui:field="save" text="{constants.save}"
                                          iconStyle="glyphicon glyphicon-floppy-disk"/>
                    <widget:ToolbarButton ui:field="refresh" text="{constants.refresh}"
                                          iconStyle="glyphicon glyphicon-refresh"/>
                    <widget:ToolbarButton ui:field="delete" text="{constants.delete}" iconStyle="glyphicon glyphicon-trash"/>
                    <widget:ToolbarButton ui:field="edit" text="{constants.edit}" iconStyle="glyphicon glyphicon-pencil"/>
	    		</div>
	    	</div>
    	</div>
    </g:HTMLPanel>
</ui:UiBinder>