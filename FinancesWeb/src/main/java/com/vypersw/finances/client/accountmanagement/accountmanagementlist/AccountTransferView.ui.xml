<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.vypersw.finances.client.widget"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html"
>
    <ui:with field="constants" type="com.vypersw.finances.client.i18n.FinancesConstants"/>
    <g:HTMLPanel ui:field="main" addStyleNames="max-height">
        <b:html.Div addStyleNames="row">
            <b:Form type="HORIZONTAL" addStyleNames="account-transfer-form">
                <b:FieldSet>
                    <b:FormGroup ui:field="accountNameGroup">
                        <b:FormLabel for="formAccountName" text="{constants.sourceAccount}" addStyleNames="col-md-2"/>
                        <g:FlowPanel addStyleNames="col-md-3">
                            <b:ListBox ui:field="sourceAccount" b:id="formAccountName"/>
                        </g:FlowPanel>
                        <g:Label addStyleNames="col-md-2 glyphicon glyphicon-arrow-right account-transfer-icon"/>
                        <b:FormLabel for="formTargetAccount" text="{constants.targetAccount}" addStyleNames="col-md-2"/>
                        <g:FlowPanel addStyleNames="col-md-3">
                            <b:ListBox ui:field="targetAccount" b:id="formTargetAccount"/>
                        </g:FlowPanel>
                    </b:FormGroup>
                </b:FieldSet>
            </b:Form>
        </b:html.Div>
        <b:html.Div addStyleNames="row widget-row">
            <b.html:Div addStyleNames="col-md-4">
                <widget:AccountWidget ui:field="sourceAccountWidget"/>
            </b.html:Div>
            <b:TextBox addStyleNames="col-md-4 transfer-amount"/>
            <b.html:Div addStyleNames="col-md-4">
                <widget:AccountWidget ui:field="targetAccountWidget"/>
            </b.html:Div>
        </b:html.Div>
    </g:HTMLPanel>
</ui:UiBinder>