<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.vypersw.finances.client.widget"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
>
    <ui:with field="constants" type="com.vypersw.finances.client.i18n.FinancesConstants"/>
    <g:HTMLPanel ui:field="main" addStyleNames="finances-form">
        <widget:Toolbar ui:field="toolbar"/>
        <b:Form type="HORIZONTAL">
            <b:FieldSet>
                <b:FormGroup ui:field="accountGroup">
                    <b:FormLabel for="formAccount" text="{constants.account}" addStyleNames="col-md-4"/>
                    <g:FlowPanel addStyleNames="col-md-8">
                        <b:ListBox ui:field="account" b:id="formAccount"/>
                    </g:FlowPanel>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel for="formTransactionType" text="{constants.transaction}" addStyleNames="col-md-4"/>
                    <g:FlowPanel addStyleNames="col-md-8">
                        <b:ListBox ui:field="transactionType" b:id="formTransactionType" addStyleNames="col-md-8"/>
                    </g:FlowPanel>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel for="formAmount" text="{constants.amount}" addStyleNames="col-md-4"/>
                    <g:FlowPanel addStyleNames="col-md-8">
                        <b:TextBox ui:field="amount" b:id="formAmount" addStyleNames="col-md-8"/>
                    </g:FlowPanel>
                </b:FormGroup>
                <b:FormGroup>
                    <b:FormLabel for="formDescription" text="{constants.description}" addStyleNames="col-md-4"/>
                    <g:FlowPanel addStyleNames="col-md-8">
                        <b:TextBox ui:field="description" b:id="formDescription" addStyleNames="col-md-8"/>
                    </g:FlowPanel>
                </b:FormGroup>
            </b:FieldSet>
        </b:Form>
    </g:HTMLPanel>
</ui:UiBinder>