<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:widget="urn:import:com.vypersw.finances.client.widget"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:datepicker="urn:import:org.gwtbootstrap3.extras.datepicker.client.ui"
>
    <ui:with field="constants" type="com.vypersw.finances.client.i18n.FinancesConstants"/>
    <g:HTMLPanel ui:field="main" addStyleNames="finances-form max-height">
        <g:DockLayoutPanel unit="PX" addStyleNames="max-height">
            <g:north size="28">
                <widget:Toolbar ui:field="toolbar"/>
            </g:north>
            <g:center>
                <b:html.Div addStyleNames="transaction-container max-height">
                    <b:Form type="HORIZONTAL">
                        <b:FieldSet>
                            <b:FormGroup ui:field="accountGroup">
                                <b:FormLabel for="formAccount" text="{constants.account}" addStyleNames="col-md-4"/>
                                <g:FlowPanel addStyleNames="col-md-8">
                                    <b:ListBox ui:field="account" b:id="formAccount"/>
                                </g:FlowPanel>
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formTransactionType" text="{constants.transaction}"
                                             addStyleNames="col-md-4"/>
                                <g:FlowPanel addStyleNames="col-md-8">
                                    <b:ListBox ui:field="transactionType" b:id="formTransactionType"
                                               addStyleNames="col-md-8"/>
                                </g:FlowPanel>
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formAmount" text="{constants.amount}" addStyleNames="col-md-4"/>
                                <g:FlowPanel addStyleNames="col-md-8">
                                    <b:TextBox ui:field="amount" b:id="formAmount" addStyleNames="col-md-8"/>
                                </g:FlowPanel>
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formDescription" text="{constants.description}"
                                             addStyleNames="col-md-4"/>
                                <g:FlowPanel addStyleNames="col-md-8">
                                    <b:TextBox ui:field="description" b:id="formDescription" addStyleNames="col-md-8"/>
                                </g:FlowPanel>
                            </b:FormGroup>
                            <b:FormGroup>
                                <b:FormLabel for="formAdvanced" text="{constants.advanced}" addStyleNames="col-md-4"/>
                                <g:FlowPanel addStyleNames="col-md-8">
                                    <b:CheckBox ui:field="advanced" b:id="formAdvanced" addStyleNames="col-md-8"/>
                                </g:FlowPanel>
                            </b:FormGroup>
                            <b:FormGroup ui:field="dateGroup" visible="false">
                                <b:FormLabel for="formDate" text="{constants.date}" addStyleNames="col-md-4"/>
                                <g:FlowPanel addStyleNames="col-md-8">
                                    <datepicker:DatePicker highlightToday="true" autoClose="true" allowBlank="false"
                                                           ui:field="date"
                                                           b:id="formDate"/>
                                </g:FlowPanel>
                            </b:FormGroup>
                        </b:FieldSet>
                    </b:Form>
                </b:html.Div>
            </g:center>
            <g:east size="300">
                <b:html.Div addStyleNames="transaction-tree-container max-height">
                    <g:Tree ui:field="categoryTree" addStyleNames="category-tree">
                    </g:Tree>
                </b:html.Div>
            </g:east>
        </g:DockLayoutPanel>
    </g:HTMLPanel>
</ui:UiBinder>