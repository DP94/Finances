<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
			 xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
    <g:HTMLPanel ui:field="main" styleName="perspective-content-main">
    	<div class="perspective-content">
    		<div class="perspective-content-topbar">
    			<div class="perspective-content-bar-content">
		   			<span class="content content-title"><g:Label ui:field="title"/></span>
		    		<g:Button ui:field="close" styleName="perspective-content-close">
		    			<span class="glyphicon glyphicon-remove"/>
		    		</g:Button>
		    	</div>
    		</div>
    		<div class="perspective-content-body">
    			<g:HTMLPanel ui:field="contentContainer">
    			</g:HTMLPanel>
    		</div>
    	</div>
    </g:HTMLPanel>
</ui:UiBinder>