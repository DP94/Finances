<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:widget="urn:import:com.vypersw.finances.client.widget">
    <g:HTMLPanel ui:field="main">
	    <g:HTMLPanel ui:field="navHeader">
	    	<div class="nav-header">
	    		<g:Button ui:field="menuButton" styleName="glyphicon glyphicon-menu-hamburger nav-header-button"></g:Button>
	    	</div>
	    </g:HTMLPanel>
	    <g:HTMLPanel ui:field="sidebar" visible="false" styleName="side-bar">
	    	<div class="nav-sidebar">
	    		<div class="nav-sidebar-container">
	    			<div class="nav-sidebar-options">
   						<div class="nav-sidebar-options-container">
							<widget:MenuButton ui:field="addExpense" iconStyle="glyphicon glyphicon-plus options-item" text="Add expense"></widget:MenuButton>
							<widget:MenuButton ui:field="addIncome" iconStyle="glyphicon glyphicon-piggy-bank" text="Add income"></widget:MenuButton>
							<widget:MenuButton ui:field="accountManagement" iconStyle="glyphicon glyphicon-folder-open" text="Account management"></widget:MenuButton>
							<widget:MenuButton ui:field="reports" iconStyle="glyphicon glyphicon-signal" text="Reports"></widget:MenuButton>
							<widget:MenuButton ui:field="userManagement" iconStyle="glyphicon glyphicon-user" text="User settings"></widget:MenuButton>
   							<widget:MenuButton ui:field="logout" iconStyle="glyphicon glyphicon-off" text="Logout"></widget:MenuButton>
   						</div>
	    			</div>
	    		</div>
	    	</div>
	    </g:HTMLPanel>
    	<g:HTMLPanel ui:field="contentPanel" styleName="content-panel">
    	</g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>