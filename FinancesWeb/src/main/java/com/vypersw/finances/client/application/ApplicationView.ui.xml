<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:widget="urn:import:com.vypersw.finances.client.widget"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">
              <ui:with field="constants" type="com.vypersw.finances.client.i18n.FinancesConstants"/>
    <g:HTMLPanel ui:field="main">
	    <g:HTMLPanel ui:field="navHeader">
	    	<div class="nav-header-app">
	    		<div class="nav-header-content">
		    		<g:Button ui:field="menuButton" styleName="glyphicon glyphicon-menu-hamburger nav-header-button"></g:Button>
		    		<g:Label ui:field="nameLabel" styleName="nav-header-user-label"></g:Label>
		    	</div>
	    	</div>
	    </g:HTMLPanel>
	    <g:HTMLPanel ui:field="sidebar" visible="false" styleName="side-bar">
	    	<div class="nav-sidebar">
	    		<div class="nav-sidebar-container">
	    			<div class="nav-sidebar-options">
   						<div class="nav-sidebar-options-container">
							<widget:MenuButton ui:field="addExpense" iconStyle="glyphicon glyphicon-plus options-item" text="{constants.addExpense}"></widget:MenuButton>
							<widget:MenuButton ui:field="addIncome" iconStyle="glyphicon glyphicon-piggy-bank" text="{constants.addIncome}"></widget:MenuButton>
							<widget:MenuButton ui:field="accountManagement" iconStyle="glyphicon glyphicon-folder-open" text="{constants.accountManagement}"></widget:MenuButton>
							<widget:MenuButton ui:field="reports" iconStyle="glyphicon glyphicon-signal" text="{constants.reports}"></widget:MenuButton>
							<widget:MenuButton ui:field="userManagement" iconStyle="glyphicon glyphicon-user" text="{constants.userManagement}"></widget:MenuButton>
   							<widget:MenuButton ui:field="logout" iconStyle="glyphicon glyphicon-off" text="{constants.logout}"></widget:MenuButton>
   						</div>
	    			</div>
	    		</div>
	    	</div>
	    </g:HTMLPanel>
    	<g:HTMLPanel ui:field="contentPanel" styleName="content-panel">
    	</g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>